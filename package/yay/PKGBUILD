# Maintainer: glatan <glatan [dot] edu [at] gmail [dot] com>
# Contributor: Jguer <joaogg3@gmail.com>

pkgname=yay
pkgver=9.2.0
pkgrel=1
pkgdesc='Yet another yogurt. Pacman wrapper and AUR helper written in go.'
url='https://github.com/Jguer/yay'
arch=('x86_64')
license=('GPL')
depends=(
  'pacman'
  'sudo'
  'git'
)
makedepends=(
  'go'
)
source=(
  "https://gitlab.com/glarch/applications/${pkgname}/-/archive/v${pkgver}/${pkgname}-v${pkgver}.tar.bz2"
)
sha512sums=(
  '5f8b18ac0057dfcaea10e820cc4dcb0670882f8fd10a662c6254bd3ffe5b1160bfae5aeb6efc95815f53ff40193167fe5dd866cd7d74cdfce250503a780978ff'
)

build() {
  cd "${srcdir}/${pkgname}-v${pkgver}" || exit
  make VERSION="${pkgver}" DESTDIR="${pkgdir}" PREFIX='/usr'
}

package() {
  cd "${srcdir}/${pkgname}-v${pkgver}" || exit
  make VERSION="${pkgver}" DESTDIR="${pkgdir}" PREFIX='/usr' install
}
