pkgname='numix-circle-icon-theme'
pkgver='19.05.07'
pkgrel='1'
pkgdesc='Circle icon theme from the Numix project'
arch=('any')
url='http://numixproject.org/'
license=('GPL3')
provides=('numix-circle-icon-theme' 'numix-circle-light-icon-theme')
options=('!strip')
source=("https://gitlab.com/glarch/applications/icon/${pkgname}/-/archive/${pkgver}/${pkgname}-${pkgver}.tar.bz2")
sha512sums=('1e393e2a4442cf62b7fce72cb3116e6d0a5d6d406f372008023b9179300a6dbf60700a3f026ba303870e9969656a3aa067ebe004a0bae1e767cccd405ab81932')

package() {
  cd "${pkgname}-${pkgver}"
  install -dm 755 "${pkgdir}"/usr/share/icons
  cp -dr --no-preserve='ownership' Numix-Circle{,-Light} "${pkgdir}"/usr/share/icons/
}
