# Maintainer: glatan <glatan [dot] edu [at] gmail [dot] com>
# Contributor: Noi Sek <noi.t.sek | gmail>

pkgname='lightdm-webkit-theme-aether'
pkgver='2.2.2'
pkgrel='4'
pkgdesc='A sleek, customizable Archlinux theme for lightdm.'
arch=('any')
url='https://github.com/NoiSek/Aether'
license=('GPL2')
depends=(
    'lightdm-webkit2-greeter>=2.2.3'
    'ttf-opensans'
)
install="${pkgname}.install"
source=("https://github.com/NoiSek/Aether/archive/v${pkgver}.tar.gz")
sha512sums=('1fb20a227cda6f28313cb9658be3e132a44ff0cc5e8848665c79faa364a6fa68378ae30d647c383fcddeea3f00c3ccd9c4ccc30849e0f871b9e1f590990c691b')

package() {
    _source="${srcdir}/Aether-${pkgver}"
    _dest="${pkgdir}/usr/share/lightdm-webkit/themes/${pkgname}/"
    install -dm755 "${_dest}"
    install -Dm644 "${_source}/index.html" "${_dest}"
    install -Dm644 "${_source}/index.theme" "${_dest}"
    cp -R "${_source}/src/" "${_dest}"
    cp -R "${_source}/dist/" "${_dest}"
}
